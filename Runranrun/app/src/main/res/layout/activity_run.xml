<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="kmitl.project.bosstanayot.runranrun.RunActivity">


    <TextView
        android:id="@+id/namestep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="step"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/stepnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="0"
        android:textSize="50dp"
        />
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:id="@+id/dis_lay">
    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        />
    <TextView
        android:id="@+id/disnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="0.00"
        android:layout_marginTop="50dp"
        android:textSize="30dp"

        />
        <TextView
            android:id="@+id/km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="km."
            android:layout_toRightOf="@id/disnum"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="6dp"
            android:textSize="30dp"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:layout_toRightOf="@id/dis_lay"
        android:layout_marginLeft="50dp"
        >
        <TextView
            android:id="@+id/Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            />
        <TextView
            android:id="@+id/timenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:text="00:00:00"
            android:layout_marginTop="50dp"
            android:textSize="30dp"


            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <Button
            android:id="@+id/pausebutton"
            android:onClick="start"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Pause" />
        <Button
            android:id="@+id/cancel"
            android:onClick="cancel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Cancel" />
    </LinearLayout>

</RelativeLayout>
